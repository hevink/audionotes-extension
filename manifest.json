{
  "manifest_version": 3,
  "name": "Audionotes.app",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "description": "A Chrome extension for creating and managing audio notes.",
  "host_permissions": [
    "https://home.audionotes.app/*",
    "http://*/*",
    "https://*/*"
  ],
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "cookies",
    "tabCapture",
    "audioCapture",
    "audio",
    "system.audio"
  ]
}
